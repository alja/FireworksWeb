<mvc:View height="100%" class="sapUiSizeCompact" 
          controllerName="fw.controller.FireworksMain"
          xmlns="sap.m"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:l="sap.ui.layout"
          xmlns:commons="sap.ui.commons">
  <Page showNavButton="false" showFooter="false" enableScrolling="false"
        showHeader="true" id="CanvasMainPage">
        <!--custom header top row-->
    <customHeader>
      <Bar id="otb1">
        <contentLeft>
          <MenuButton text="Edit" type="Transparent"  >
            <menu>
              <Menu id="menuEditId">
                <items>
                  <MenuItem text="Downlaod Configuration"  press="saveConfiguration"/>
                  <MenuItem text="Upload Configuration" enabled="false"  press="Download Configuration"/>
                </items>
              </Menu>
            </menu>
          </MenuButton>        
          <MenuButton text="View" type="Transparent"  >
            <menu>
              <Menu itemSelected="onViewMenuActionTmp" id="menuViewId">
                <items>
                  <MenuItem text="New Viewer"  enabled="false">
                    <items>
                      <MenuItem text="3D"  enabled="true"/>
                      <MenuItem text="RhoZ" enabled="true" />
                      <MenuItem text="RPhi" enabled="true"/>
                      <MenuItem text="Table" startsSection="true" enabled="false"/>
                    </items>
                  </MenuItem>
                </items>
              </Menu>
            </menu>
          </MenuButton>                       
        </contentLeft>
        <contentMiddle>
      <Label id="runLabel" text="Run " class="sapUiLargeMarginRight"/>
      <Input id="runInput" width="5em" submit="goToEvent" class="sapUiTinyMargin"/>
      <Label id="lumiLabel" text="Lumi " />
      <Input id="lumiInput" width="5em" submit="goToEvent" class="sapUiTinyMargin"/>
      <Label id="event" text="Event "/>
      <Input id="eventInput" width="5em" submit="goToEvent" class="sapUiTinyMargin"/>
        </contentMiddle>
        <contentRight>
          <Button  text="CMMSW"/>
          <Button id="logButton" 
                  text="ClientLog" press="showLog"/>
          <MenuButton text="Help" type="Default"  enabled="true" styleClass="rightMargin sapUiTinyMarginBottom" >
            <menu>
              <Menu>
                <items>
                  <MenuItem text="User Guide" press="userGuide" />
                  <MenuItem text="Trubleshooting" press="troubleshoot" />
                  <MenuItem text="Contact"  press="showMailAddress"  />
                </items>
              </Menu>
            </menu>
          </MenuButton>      
        </contentRight>
      </Bar>
    </customHeader>
    <!--subheader row -->
    <subHeader>
    <Bar id="otb2">  
        <contentLeft> 

      <Button id="beginEvent" icon="sap-icon://media-rewind"
              tooltip="First Event" press="firstEvent" /> 
      <Button id="prevEvent" icon="sap-icon://media-reverse"
              tooltip="Previous Event" press="prevEvent" /> 
      <Button id="nextEvent" icon="sap-icon://media-play"
              tooltip="Next Event" press="nextEvent" />  
      <Button id="endEvent" icon="sap-icon://media-forward"
              tooltip="Last Event" press="lastEvent" />  
              <Label text="AutoPlay:" />
      <CheckBox id="autoplayId"  class="sapUiNoMarginRight" select="autoplay"/>  
		  <Slider id="playdelayId" value="500"  min="0" max="2000" width="6em" change="playdelay" showAdvancedTooltip="true"  text="playdelay" class="sapUiNoMargin" />
     
     
        </contentLeft>
        <contentMiddle>
         <FormattedText id="centerTitle"  htmlText=" " />
         <CheckBox id="enableFilter" text="EnableFilter" select="enableFilter" tootltip="Auto play events with delay in miliseconds"/>
         <Button id="eventFilter" text="FilterDialog" press="eventFilterShow"/> 
      </contentMiddle>
      <contentRight>
      <Label id="dateLabel" text="__________________________________" />
      </contentRight>
    </Bar>
    </subHeader>
    <content>
      <l:Splitter orientation="Horizontal" id="MainAreaSplitter">
        <l:contentAreas>
          <mvc:XMLView id="Summary" viewName="fw.view.FireworksSummary" height="100%">
            <mvc:layoutData><l:SplitterLayoutData size="25%"/></mvc:layoutData>
          </mvc:XMLView>
        </l:contentAreas>
      </l:Splitter>
    </content>
  </Page>
</mvc:View>

