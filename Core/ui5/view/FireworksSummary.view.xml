<mvc:View
    controllerName="fw.controller.FireworksSummary"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    class="sapUiSizeCompact">
  <Button  id="addCollection" text="Add Collections" press="addCollection"
           width="100%" height="100px"  enabled="true" > </Button>
  <l:Splitter id="sumSplitter"  height="calc(100% - 100px)"  orientation="Vertical">
    <Tree id="tree" itemPress="onItemPressed" width="calc(100% - 9px)" toggleOpenState="onToggleOpenState"
	  class="sapUiSizeCompact sapUiTinyMargin" >
      <layoutData><l:SplitterLayoutData size="auto" /></layoutData>
    </Tree>
  </l:Splitter>

</mvc:View>
