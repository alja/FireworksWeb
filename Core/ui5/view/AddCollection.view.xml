<mvc:View controllerName="fw.controller.AddCollection"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m">

    <Dialog id="acdialog" contentHeight="100%" contentWidth="80%">
        <content>
            <IconTabBar
                width="100%"
                id="tbar"
                stretchContentHeight="false"
                class="sapUiResponsiveContentPadding">

                <items>
                    <IconTabFilter id="ctab" icon="sap-icon://tree" count="10" key="ctable" text="Collections">
                        <content>
                            <FlexBox alignItems="Start">
                                <SearchField id="csr" width="100%" class="sapUiSizeCompact"
                                    tooltip="filter EDM collections"
                                    placeholder="Filter"
                                    search=".onFilterPost">
                                    <layoutData>
                                        <FlexItemData growFactor="1"/>
                                    </layoutData>
                                </SearchField>
                                <CheckBox id="empty" displayOnly="false" selected="true"
                                    text="showEmpty" tooltip="show empty EDM collections"
                                    select="showEmptyChange"
                                    class="sapUiSizeCompact sapUiNoMargin"/>
                            </FlexBox>

                            <Table width="100%" id="ctable" mode="SingleSelect">
                                <columns>
                                    <Column><Text text="Purpose" /></Column>
                                    <Column><Text text="ModuleLabel" /></Column>
                                    <Column><Text text="ProductInstance" /></Column>
                                    <Column><Text text="ProcessName" /></Column>
                                    <Column><Text text="Type" /></Column>
                                </columns>
                            </Table>
                        </content>
                    </IconTabFilter>

                    <IconTabFilter id="atab" icon="sap-icon://share-2" count="10" key="atable" text="Associations">
                        <content>
                            <SearchField id="asr" class="sapUiSizeCompact" placeholder="Filter" search=".onFilterPost"/>
                            <Table id="atable" mode="SingleSelect">
                                <columns>
                                    <Column><Text text="Purpose" /></Column>
                                    <Column><Text text="ModuleLabel" /></Column>
                                    <Column><Text text="ProductInstance" /></Column>
                                    <Column><Text text="ProcessName" /></Column>
                                    <Column><Text text="Type" /></Column>
                                </columns>
                            </Table>
                        </content>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>
        <footer>
        <OverflowToolbar>
        <Label
          text="Custom Name:"
          labelFor="customInput"/>
                    <Input
                        id="nameInput"
                        width="300px"
                        placeholder="Type here..." />
                         <ToolbarSpacer />

        <Button
          id="closeButton"
          text="Close"
          press="onClose"
        />
        <Button
          id="addButton"
          text="AddData"
          type="Emphasized"
          press="addCollection"
        />
      </OverflowToolbar>
      </footer>
  </Dialog>
</mvc:View>
